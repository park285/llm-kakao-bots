package party.qwer.twentyq.redis.tracking

import kotlinx.coroutines.reactor.awaitSingleOrNull
import kotlinx.coroutines.runBlocking
import org.redisson.api.RedissonReactiveClient
import org.slf4j.LoggerFactory
import org.springframework.boot.autoconfigure.condition.ConditionalOnProperty
import org.springframework.stereotype.Component
import party.qwer.twentyq.config.AppProperties
import party.qwer.twentyq.redis.RedisKeys
import java.time.Duration

@Component
@ConditionalOnProperty(
    prefix = "app.redis",
    name = ["enabled"],
    havingValue = "true",
    matchIfMissing = true,
)
class PlayerSetStore(
    private val redisson: RedissonReactiveClient,
    private val props: AppProperties,
) {
    companion object {
        private val log = LoggerFactory.getLogger(PlayerSetStore::class.java)
    }

    // Blocking wrapper for non-suspend contexts (CONVENTIONS: 허용됨 - Redis operations)
    fun add(
        roomId: String,
        userId: String,
    ) = runBlocking { addAsync(roomId, userId) }

    suspend fun addAsync(
        roomId: String,
        userId: String,
    ) {
        val set = redisson.getSet<String>(key(roomId))
        set.add(userId).awaitSingleOrNull()
        set.expire(Duration.ofMinutes(props.redis.sessionTtlMinutes.toLong())).awaitSingleOrNull()
        log.debug("ADD room={}, userId={}", roomId, userId)
    }

    // Blocking wrapper for non-suspend contexts (CONVENTIONS: 허용됨 - Redis operations)
    fun getAll(roomId: String): Set<String> = runBlocking { getAllAsync(roomId) }

    suspend fun getAllAsync(roomId: String): Set<String> {
        val set = redisson.getSet<String>(key(roomId))
        return set.readAll().awaitSingleOrNull()?.toSet() ?: emptySet()
    }

    // Blocking wrapper for non-suspend contexts (CONVENTIONS: 허용됨 - Redis operations)
    fun clear(roomId: String) = runBlocking { clearAsync(roomId) }

    suspend fun clearAsync(roomId: String) {
        val set = redisson.getSet<String>(key(roomId))
        set.delete().awaitSingleOrNull()
        log.debug("CLEAR room={}", roomId)
    }

    // Blocking wrapper for non-suspend contexts (CONVENTIONS: 허용됨 - Redis operations)
    fun setTtl(
        roomId: String,
        ttl: Duration,
    ) = runBlocking { setTtlAsync(roomId, ttl) }

    suspend fun setTtlAsync(
        roomId: String,
        ttl: Duration,
    ) {
        val set = redisson.getSet<String>(key(roomId))
        set.expire(ttl).awaitSingleOrNull()
    }

    private fun key(roomId: String) = "${RedisKeys.PLAYERS}:$roomId"
}
