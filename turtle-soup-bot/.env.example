# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_UDS_HEALTH_ENABLED=true
SERVER_UDS_HEALTH_PATH=/run/mcp-llm/turtle-soup-health.sock

# LLM REST API
LLM_REST_BASE_URL=http://localhost:40527
LLM_REST_TIMEOUT_SECONDS=120
LLM_REST_CONNECT_TIMEOUT_SECONDS=10
LLM_REST_HTTP2_ENABLED=true
LLM_REST_HEALTH_RESTART_CONTAINERS=mcp-llm-server
LLM_REST_HEALTH_DOCKER_SOCKET=/var/run/docker.sock
LLM_REST_HEALTH_RESTART_COMMAND=
LLM_REST_HEALTH_RESTART_LOCK_KEY=shared:watchdog:restart:mcp-llm-server
LLM_REST_HEALTH_RESTART_LOCK_TTL_SECONDS=120

# Puzzle
PUZZLE_REWRITE_ENABLED=true

# Google Gemini (used by mcp-llm-server)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.5-flash-preview-05-2025
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048
GEMINI_CACHE_TTL_SECONDS=300

# Redis (Valkey 9.0)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Valkey MQ (Message Queue)
VALKEY_MQ_HOST=localhost
VALKEY_MQ_PORT=1833
VALKEY_MQ_PASSWORD=
VALKEY_MQ_TIMEOUT=5000
VALKEY_MQ_CONNECTION_POOL_SIZE=64
VALKEY_MQ_CONNECTION_MIN_IDLE_SIZE=10
VALKEY_MQ_CONSUMER_GROUP=turtle-soup-bot-group
VALKEY_MQ_CONSUMER_NAME=consumer-1
VALKEY_MQ_STREAM_KEY=kakao:turtle-soup
VALKEY_MQ_REPLY_STREAM_KEY=kakao:bot:reply

# Access Control
ACCESS_ENABLED=true
ACCESS_ALLOWED_CHAT_IDS=267947734
ACCESS_BLOCKED_CHAT_IDS=
ACCESS_BLOCKED_USER_IDS=
ACCESS_PASSTHROUGH=false
